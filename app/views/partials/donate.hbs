<section class="ui raised segment">
  <div class="ui grid ">
    <div class="ui form six wide column">
      <div class="ui stacked segment">
        <form action="/donate" method="POST" class="ui form">
          <div class="grouped inline fields">
          <h3> Enter Amount </h3>
            <div class="field">
              <input type="number" name="amount" min="1" value="{{amount}}" />
            </div>
          </div>
          <div class="grouped inline fields">
            <h3> Select Method </h3>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" name="method" value="paypal" id="method_paypal">
                <label for="method_paypal">Paypal</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" name="method" value="direct" id="method_direct">
                <label for="method_direct">Direct</label>
              </div>
            </div>
          </div>
          <div class="grouped inline fields">
            <h3> Select Candidate </h3>
            {{#each candidates }}
              <div class="field">
                <div class="ui radio checkbox">
                  <input type="radio" name="candidate" id="c{{@index}}"
                         value="{{lastName}},{{firstName}}" />
                  <label for="c{{@index}}">{{lastName}}, {{firstName}}</label>
                </div>
              </div>
            {{/each}}
          </div>
          <button class="ui blue submit button">Donate</button>
        </form>
        {{> formerror }}
      </div>
    </div>
    <aside class="six wide column">
      <img src="images/homer4.jpeg" class="ui medium image">
    </aside>
  </div>
</section>